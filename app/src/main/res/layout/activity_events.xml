            android:textSize="28sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:textColor="#ffffff"
            android:layout_marginTop="38sp"
            android:layout_below="@+id/button5"
            android:layout_centerHorizontal="true"
            android:onClick="pd" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social media analysis"
            android:id="@+id/button6"
            android:background="#00000000"
            android:textSize="28sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:textColor="#ffffff"
            android:layout_marginTop="43sp"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
            android:onClick="sma" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hardware Modeling"
            android:id="@+id/button7"
            android:background="#00000000"
            android:textSize="28sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:textColor="#ffffff"
            android:layout_marginTop="45sp"
            android:layout_below="@+id/button6"
            android:layout_centerHorizontal="true"
            android:onClick="hm" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Embedded Systems"
            android:id="@+id/button8"
            android:background="@android:color/transparent"
            android:textSize="28sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:textColor="#ffffff"
            android:layout_marginTop="43sp"
            android:layout_below="@+id/button7"
            android:layout_centerHorizontal="true"
            android:onClick="es" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Exhibition"
        android:id="@+id/button9"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        android:textStyle="normal"
        android:typeface="sans"
        android:textColor="#ffffff"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38sp"
            android:onClick="pe" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tech Quiz"
            android:id="@+id/button10"
            android:background="@android:color/transparent"
            android:textSize="28sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:textColor="#ffffff"
            android:layout_below="@+id/button9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38sp"
            android:onClick="tq" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Development"
            android:id="@+id/button11"
            android:background="@android:color/transparent"
            android:textSize="28sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:textColor="#ffffff"
            android:layout_below="@+id/button10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38sp"
            android:onClick="sd" />


    </RelativeLayout>
